use strict;
use Socket;
use POSIX;
eval {
	require Locale::gettext;
	Locale::gettext->require_version(1.04);
};
if ($@) {
	require Schulkonsole::Gettext;
}
use CGI;
use CGI::Session qw(-ip_match);
use Crypt::Rijndael;
use Digest::MD5;
use Schulkonsole::Config;
