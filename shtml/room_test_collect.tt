   }
%]

[% INCLUDE "subsubmenu-room_test.inc.tt" %]

<h2>[% d.get('Aktueller Raum') %]: [% room %]
::  [% d.get('Klassenarbeitsmodus') %]</h2>

<p>
[% d.get('Nutzung:') %]

[% IF editinguser %]
[% editinguser %]
[% d.get('unterrichtet in Raum') %]
[% room %].
[% IF endedittime %]
[% d.get('Unterrichtsende um') %] [% endedittime %].
[% END %]
</p>

<p>[% d.get('Klassenarbeitsmodus ist <strong>aktiv</strong>.') %]</p>

<hr>

<form method="post" accept-charset="UTF-8">

<p><input type="submit" name="collectcopy" value="[% d.get('Kopien einsammeln') %]">
   <input type="submit" name="collectmove" value="[% d.get('Einsammeln und beenden') %]"></p>

<table id="roomcollect" class="liste">
<tr>
<th>[% d.get('Hostname') %]</th>
<th>[% d.get('Login') %]</th>
<th>[% d.get('Dateien') %]</th>
</tr>
[% FOREACH w IN overview_workstations %]
[% IF odd %][% odd=0 %]<tr class="odd">
[% ELSE %][% odd=1 %]<tr class="even">[% END %]
	<td>[% IF w.first %]
	    [% w.name %]
	    [% END %]</td>
	[% IF w.login %]
	<td>[% .login %]</td>
	<td>[% FOREACH wf IN w.files %]
	[% IF wf.isdir %]
	*[% END %][% wf.name %]<br>
	[% END %]
	</td>
	[% ELSE %]
	<td>-</td>
	<td>-</td>
	[% END %]
</tr>
[% END %]
</table>

<p><input type="submit" name="collectcopy" value="[% d.get('Kopien einsammeln') %]">
   <input type="submit" name="collectmove" value="[% d.get('Einsammeln und beenden') %]"></p>


<p><input type="submit" value="[% d.get('Aktualisieren') %]"></p>

</form>
